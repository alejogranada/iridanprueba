{# templates/contacto/nuevo.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Formulario de Contacto{% endblock %}

{% block body %}
    <div class="container mt-5">

        {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
			{# Mostrar mensajes flash #}
			{% for message in app.flashes('error') %}
				<div style="color: red;">{{ message }}</div>
			{% endfor %}				
		
            <div class="mb-3">
                {{ form_label(form.nombre) }}:
                {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nombre) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.apellido) }}:
                {{ form_widget(form.apellido, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.apellido) }}
            </div>
            <div class="form-group">
				{{ form_label(form.correo) }}
				{{ form_widget(form.correo, {'attr': {'class': 'form-control' ~ (form.correo.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
				<div class="invalid-feedback">
					{{ form_errors(form.correo) }}
				</div>
			</div>
            <div class="mb-3">
                {{ form_label(form.celular) }}:
                {{ form_widget(form.celular, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.celular) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.area) }}:
                {{ form_widget(form.area, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.area) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.mensaje) }}:
                {{ form_widget(form.mensaje, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                {{ form_errors(form.mensaje) }}
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
