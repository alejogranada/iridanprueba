{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Formulario de Contacto{% endblock %}</title>
    
    {# Bootstrap CSS desde CDN #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    {# Bloque para estilos adicionales #}
    {% block stylesheets %}
        {# Puedes añadir estilos personalizados aquí #}
    {% endblock %}
</head>
<body>
    {# Barra de navegación (opcional) #}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="{{ path('contacto') }}">Formulario de Contacto</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            {# Puedes añadir enlaces de navegación aquí #}
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('contacto') }}">Reiniciar Formulario</a>
                    </li>
                    {# Añade más enlaces según tus necesidades #}
                </ul>
            </div>
        </div>
    </nav>

    {# Contenedor principal #}
    <div class="container">
        {# Mensajes flash para notificaciones #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : (label == 'success' ? 'success' : 'info') }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {# Bloque para el contenido específico de cada página #}
        {% block body %}
        {% endblock %}
    </div>

    {# Pie de página (opcional) #}
    <footer class="bg-light text-center text-lg-start mt-5">
        <div class="text-center p-3">
            © {{ "now"|date("Y") }} Iridian
        </div>
    </footer>

    {# Bootstrap JS y dependencias desde CDN #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    {# Bloque para scripts adicionales #}
    {% block javascripts %}
        {# Puedes añadir scripts personalizados aquí #}
    {% endblock %}
</body>
</html>
